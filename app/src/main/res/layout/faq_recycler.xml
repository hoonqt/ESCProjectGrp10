<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    tools:context="com.example.esc_50005.UI.Course.FAQ.CourseActivity">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/faq_cv"
        style="@style/CardView.Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="-3dp"
        android:layout_marginStart="-3dp"
        tools:ignore="ContentDescription">

        <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/faq_tv_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:paddingTop="8dp"
                android:text="Sample Question"
                android:textAppearance="@style/CardView_Title" />

            <TextView
                android:id="@+id/faq_tv_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Here is for the answer to the question which may have several lines"
                android:textAppearance="@style/CardView_Subtitle"
                android:textColor="#111111" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/faq_tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:lineSpacingExtra="8dp"
                    android:text="01 March 2018"
                    android:textAppearance="@style/CardView_Subtext"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:id="@+id/faq_tv_upvote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:lineSpacingExtra="8dp"
                    android:text="2 upvotes"
                    android:textAppearance="@style/CardView_Subtext"
                    android:layout_toLeftOf="@+id/faq_btn_upvote" />

                <!--<Button-->
                    <!--android:id="@+id/faq_btn_upvote"-->
                    <!--style="@style/Widget.AppCompat.Button.Borderless"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="Upvote"-->
                    <!--android:layout_alignParentRight="true"/>-->

                <Button
                    android:id="@+id/faq_btn_upvote"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/ic_favorite_black_24dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>