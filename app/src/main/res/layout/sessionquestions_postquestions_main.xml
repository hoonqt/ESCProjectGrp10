<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cindy.esc_50005.UI.Session.SessionActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_input_qns">

        <RelativeLayout
            xmlns:tools="http://schemas.Android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:id="@+id/ll1">

            <EditText
                android:id="@+id/question_input"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Type Question Here!"
                android:inputType="text" />

            <Button
                android:id="@+id/add_button"
                android:layout_toRightOf="@+id/question_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textSize="20dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerViewPostQuestions"></android.support.v7.widget.RecyclerView>

</FrameLayout>
