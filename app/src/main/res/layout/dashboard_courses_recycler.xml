<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:orientation="vertical"
    tools:context="com.example.esc_50005.UI.Dashboard.main.DashboardActivity">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        card_view:cardMaxElevation="1dp"
        card_view:cardElevation="1dp"
        card_view:cardBackgroundColor="@color/colorDashboard"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/courseId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/CardView_Subtitle"
                android:textColor="@color/colorTab"
                android:layout_above="@+id/courseName"
                />

            <TextView
                android:layout_marginLeft="10dp"
                android:paddingBottom="10dp"
                android:id="@+id/courseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/CardView_Title"
                android:textColor="@color/colorTab"
                android:layout_alignParentBottom="true" />

            <ImageButton
                android:id="@+id/delete_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/cross"
               android:layout_alignParentRight="true" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
